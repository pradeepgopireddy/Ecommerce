<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
    <script src="/javascripts/jquery.growl.js" type="text/javascript"></script>
    <script src="/javascripts/jquery-ui.js" type="text/javascript"></script>
    <script src= "/javascripts/chosen.jquery.js" type="text/javascript"></script>

    <link href="/stylesheets/jquery.growl.css" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/jquery-ui.css" rel="stylesheet" type="text/css" >
    <link href="/stylesheets/chosen.css" rel="stylesheet" type="text/css" >

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

  </head>

  <body>
  <%=link_to "Categories", categories_path %> | <%=link_to "Products", products_path%>
  <% if user_signed_in? %>
      welcome <%= current_user.username %>
      <%= link_to " Your Cart(#{current_user.cart_line_items.pluck(:quantity).inject(:+)})", cart_line_items_path, id: "cartCount" %>|
      <%= link_to "Your Wishlist(#{current_user.wishlists.size})", wishlists_path %>|<%= link_to "Your Reviews", reviews_path %> | <%= link_to "Addresses", addresses_path %> |
      <%= link_to "Account Setting", edit_user_registration_path %> |<%= link_to "Logout", destroy_user_session_path, method: :delete %><br/>
  <% else %>
      <%= link_to "Register", new_user_registration_path %> |<%= link_to "Login", new_user_session_path %><br/>
  <% end %>
      <%=notice%>
      <%= alert %>
    <%= yield %>
    <% if user_signed_in? %>
        <p>Your current IP (<%= current_user.current_sign_in_ip %>)</p>
        <%#= current_user.inspect %>
        <% end %>
  </body>
</html>
